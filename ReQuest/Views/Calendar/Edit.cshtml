            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" name="response" value="Accept" formaction=@Url.Action("StatusAccept", "Calendar", new { id = Model.RequestId }) formmethod="post" class="btn btn-primary" />
